<mvc:View controllerName="logaligroup.invoices.controller.Details" 
          xmlns="sap.m" 
          xmlns:mvc="sap.ui.core.mvc" 
          xmlns:core="sap.ui.core"
          xmlns:logali="logaligroup.invoices.control"
          displayBlock="true">
    <Page id="page2" 
          title="{i18n>detailsPageTitle}"
          showNavButton="true"
          navButtonPress=".onNavBack">
        <ObjectHeader id="objectHeader" 
                      title="{northwind>Quantity} x {northwind>ProductName}"
                      responsive="true"
                      fullScreenOptimized="true">
            <attributes>
                  <ObjectAttribute id="idShipName" 
                                   text="{northwind>ShipName}"/>
                  <ObjectAttribute id="idShipAddress" 
                                   text="{northwind>ShipAddress}"/>
                  <ObjectAttribute id="idShipCity" 
                                   text="{northwind>ShipCity}"/>
                  <ObjectAttribute id="idShipRegion" 
                                   text="{northwind>ShipRegion}"/>
                  <ObjectAttribute id="idShipPostalCode" 
                                   text="{northwind>ShipPostalCode}"/>
                  <ObjectAttribute id="idShipCountry" 
                                   text="{northwind>ShipCountry}"/>
                  <ObjectAttribute id="idCustomerID" 
                                   text="{northwind>CustomerID}"/>
                  <ObjectAttribute id="idCustomerName" 
                                   text="{northwind>CustomerName}"/>
            </attributes>
        </ObjectHeader>
        <logali:ProductRating id="rating"
                              class="sapUiSmallMarginBeginEnd"
                              change=".onRatingChange"/>
    </Page>
</mvc:View>