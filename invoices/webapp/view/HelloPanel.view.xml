<mvc:View controllerName="logaligroup.invoices.controller.HelloPanel" 
          xmlns="sap.m" 
          xmlns:mvc="sap.ui.core.mvc"
          xmlns:core="sap.ui.core" 
          displayBlock="true">

    <Panel id="panel1" 
           headerText="{i18n>helloPanel}"
           class="sapUiResponsiveMargin"
           width="auto">
        <content>
            <Button id="btnDialog"
                    text="{i18n>helloDialogBtn}"
                    press=".onOpenDialog"
                    class="sapUiSmallMarginEnd"
                    icon="sap-icon://action" />
            <Button id="btn1" 
                    text="{i18n>showHelloButtonText}" 
                    press=".onShowHello"
                    class="sapUiSmallMarginEnd" />
            <Input id="inp1" 
                   value="{/recipient/name}" 
                   width="60%" 
                   valueLiveUpdate="true" />
            <Text id="txt2"
                  text="{i18n>showDescText} {/recipient/name}"
                  class="sapUiSmallMargin boldElements" />
        </content>
    </Panel>

    <core:Fragment fragmentName="logaligroup.invoices.fragment.Form01"
                   type="XML"/>

</mvc:View>