<core:FragmentDefinition xmlns="sap.m"
                         xmlns:core="sap.ui.core">
    <Dialog id="dialog1"
            title="{i18n>showDescText} {/recipient/name}">
        <content>
            <core:Icon id="iconDialog"
                       src="sap-icon://hello-world"
                       size="8rem" />
        </content>
        <beginButton>
            <Button id="closeBtn"
                    text="{i18n>closeDialogBtn}"
                    press=".onCloseDialog" />
        </beginButton>
    </Dialog>
</core:FragmentDefinition>