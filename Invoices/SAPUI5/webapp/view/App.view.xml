<mvc:View controllerName="logaligroup.SAPUI5.controller.App" 
          xmlns="sap.m" 
          xmlns:mvc="sap.ui.core.mvc">
          
    <Button id="but1" 
            text="{i18n>showHelloButtonText}" 
            press=".onShowHello" />

    <Input id="inp1" 
           value="{/recipient/name}"
           description="Hello {/recipient/name}"
           width="60%"
           valueLiveUpdate="true"></Input>
</mvc:View>
