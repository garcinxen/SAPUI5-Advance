<mvc:View xmlns:upload="sap.m.upload" controllerName="employeesv2.controller.OrderDetails"
          xmlns:mvc="sap.ui.core.mvc" 
          displayBlock="true"
          xmlns="sap.m"
          xmlns:core="sap.ui.core"
          xmlns:l="sap.ui.layout"
          xmlns:f="sap.ui.layout.form"
          xmlns:sc="employeesv2.control">
    <Page>
        <customHeader>
            <Bar>
                <contentLeft>
                    <Button icon="sap-icon://nav-back"
                            press="onBack"/>
                </contentLeft>
                <contentMiddle>
                    <Text text="{i18n>orderID} {odataNorthwind>OrderID}"/>
                </contentMiddle>
            </Bar>            
        </customHeader>
        <content>
            <Panel headerText="{i18n>customerId}: {odataNorthwind>CustomerID}">
                <l:Grid defaultSpan="L6 M6 S12">
                    <f:Form editable="false">
                        <f:layout>
                            <f:ResponsiveGridLayout labelSpanL="6"
                                                    labelSpanM="6"
                                                    labelSpanS="12"/>                            
                        </f:layout>
                        <f:formContainers>
                            <f:FormContainer>
                                <f:formElements>
                                    <f:FormElement label="{i18n>orderDate}">
                                        <f:fields>
                                            <Text text="{path:'odataNorthwind>OrderDate', type:'sap.ui.model.odata.type.Date'}"/>
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement label="{i18n>freight}">
                                        <f:fields>
                                            <Text text="{odataNorthwind>Freight}"/>
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement label="{i18n>shipName}">
                                        <f:fields>
                                            <Text text="{odataNorthwind>ShipName}"/>
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement label="{i18n>shipAddress}">
                                        <f:fields>
                                            <Text text="{odataNorthwind>ShipAddress}, {odataNorthwind>ShipCity}, {odataNorthwind>ShipCountry}"/>
                                        </f:fields>
                                    </f:FormElement>
                                </f:formElements>
                            </f:FormContainer>
                        </f:formContainers>
                    </f:Form>
                    <FlexBox class="sapUiTinyMarginTop">
                        <sc:Signature id="signature">
                        </sc:Signature>
                        <Button text="{i18n>clear}"
                                press="onClearSignature"
                                class="sapUiTinyMarginBegin"/>
                    </FlexBox>
                </l:Grid>            
                <upload:UploadSet id="uploadSet"                                  
                                  maxFileNameLength="55"
                                  maxFileSize="10"
                                  uploadUrl="/sap/opu/odata/sap/YSAPUI5_SRV_01/FilesSet"
                                  uploadCompleted="onFileUploadComplete"
                                  beforeUploadStarts="onFileBeforeUpload"
                                  afterItemRemoved ="onFileDeleted"/>
                <Panel headerText="{i18n>orderProducts}">
                    <List items="{path: 'odataNorthwind>Order_Details', parameters: {expand: 'Product'}, factory: '.factoryOrderDetails'}"/>
                </Panel>
            </Panel>
        </content>
        <footer>
            <Toolbar>
                <ToolbarSpacer/>
                <Button text="{i18n>downloadFile}"
                        press="onDownloadFile"/>
                <Button text="{i18n>saveSignature}"
                        press="onSaveSignature"/>
            </Toolbar>
        </footer>        
    </Page>        
</mvc:View>