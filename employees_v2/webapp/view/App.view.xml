<mvc:View controllerName="employeesv2.controller.App"
          xmlns:mvc="sap.ui.core.mvc" 
          displayBlock="true"
          xmlns="sap.m"
          xmlns:core="sap.ui.core"
          xmlns:f="sap.f">
    <Shell id="shell">
        <App id="app"> 
            <pages>
                <Page showHeader="false">
                    <content>
                        <f:FlexibleColumnLayout id="fcl"
                                                backgroundDesign="Solid"
                                                layout="{jsonLayout>/ActiveKey}">
                            <f:beginColumnPages>
                                <mvc:XMLView id="masterEmployeeView"
                                             viewName="employeesv2.view.MasterEmployee"/>
                            </f:beginColumnPages>
                            <f:midColumnPages>
                                <mvc:XMLView id="employeeDetailsView"
                                             viewName="employeesv2.view.EmployeeDetails"/>
                            </f:midColumnPages>
                            <f:endColumnPages>
                                <Page>
                                </Page>
                            </f:endColumnPages>
                        </f:FlexibleColumnLayout>
                    </content>
                    <footer>
                        <Toolbar>
                            <Label text="{i18n>layout}"
                                   class="sapUiSmallMargin"/>
                            <Select items="{jsonLayout>/Layout}"
                                    selectedKey="{jsonLayout>/ActiveKey}">
                                <core:Item key="{jsonLayout>Key}"
                                           text="{jsonLayout>Text}"/>
                            </Select>
                        </Toolbar>
                    </footer>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>