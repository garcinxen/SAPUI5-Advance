<mvc:View controllerName="employeesv2.controller.App"
    xmlns:mvc="sap.ui.core.mvc" 
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Shell id="shell">
        <App id="app">            
            <Page id="page" 
                  title="{i18n>title}">
                <content>
                    <HBox id="hbox">
                        <Label id="labelEmployee"
                               text="{i18n>labelEmployee}"
                               class="sapUiSmallMargin"
                               labelFor="inputEmployee"/>
                        <Input id="inputEmployee"
                               value="{/EmployeeId}"
                               maxLength="10"
                               width="200px"
                               class="sapUiSmallMarginEnd sapUiSmallMarginTop"/>  
                        <Label id="labelCountry"
                               text="{i18n>labelCountry}"
                               class="sapUiSmallMargin"
                               labelFor="slCountry"/>
                        <Select id="slCountry"
                                selectedKey="{/CountryKey}"
                                items="{/ListCountry}"
                                forceSelection="false"
                                class="sapUiSmallMarginTop sapUiSmallMarginEnd">
                            <items>
                                <core:Item id="country1"
                                        key="{Key}"
                                        text="{Text}"/>
                            </items>
                        </Select>
                        <Button id="btnFilter"
                                text="{i18n>btnFilter}"
                                icon="sap-icon://search"
                                press=".onFilter"
                                class="sapUiSmallMarginEnd sapUiSmallMarginTop"/>
                        <Button id="btnClearFilter"
                                text="{i18n>btnClearFilter}"
                                icon="sap-icon://clear-filter"
                                press=".onClearFilter"
                                class="sapUiSmallMarginEnd sapUiSmallMarginTop"/>
                    </HBox>
                    <HBox id="hbox1">
                        <Panel id="panel">
                            <Table id="tableEmployee"
                                   items="{/Employees}">
                                <columns>
                                    <Column id="col1">
                                        <header>
                                            <Label id="labelCol1"
                                                   text="{i18n>tableId}">
                                            </Label>
                                        </header>
                                    </Column>
                                    <Column id="col2">
                                        <header>
                                            <Label id="labelCol2"
                                                   text="{i18n>tableName}">
                                            </Label>
                                        </header>
                                    </Column>
                                    <Column id="col3">
                                        <header>
                                            <Label id="labelCol3"
                                                   text="{i18n>tableCountry}">
                                            </Label>
                                        </header>
                                    </Column>
                                    <Column id="col4">
                                        <header>
                                            <Label id="labelCol4"
                                                   text="{i18n>tableCity}"/>
                                        </header>
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem id="colListItem"
                                                    type="Active"
                                                    press="showPostalCode">
                                        <cells>
                                            <Label id="labelCellId"
                                                   text="{EmployeeID}"/>
                                            <Label id="labelCellName"
                                                   text="{LastName}, {FirstName}"/>
                                            <Label id="labelCellCountry"
                                                   text="{Country}"/>
                                            <Label id="labelCellCity"
                                                   text="{City}"/>
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </Panel>
                    </HBox>
                </content>
            </Page>
        </App>
    </Shell>
</mvc:View>
