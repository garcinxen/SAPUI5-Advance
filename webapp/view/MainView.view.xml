<mvc:View controllerName="logaligroup.employees.controller.MainView"
          xmlns:mvc="sap.ui.core.mvc" 
          displayBlock="true"
          xmlns="sap.m"
          xmlns:core="sap.ui.core">
  <Page id="page" 
        title="{i18n>title}">
    <content>
      <HBox id="hbox">
        <Label id="labelEmployee"
               text="{i18n>labelEmployee}"
               class="sapUiSmallMargin"
               labelFor="inputEmployee"/>
        <Input id="inputEmployee"
               maxLength="10"
               width="200px"
               class="sapUiSmallMarginEnd sapUiSmallMarginTop"
               liveChange=".onValidate"/>  
        <Label id="labelCountry"
               text="{i18n>labelCountry}"
               class="sapUiSmallMargin"
               labelFor="slCountry"
               visible="false"/>
        <Select id="slCountry"
                forceSelection="false"
                visible="false"
                class="sapUiSmallMarginTop">
          <items>
            <core:Item id="countryUS"
                       key="US"
                       text="{i18n>countryUS}"/>
            <core:Item id="countryUK"
                       key="UK"
                       text="{i18n>countryUK}"/>
            <core:Item id="countryES"
                       key="ES"
                       text="{i18n>countryES}"/>
          </items>
        </Select>
      </HBox>
    </content>                  
  </Page>
</mvc:View>
